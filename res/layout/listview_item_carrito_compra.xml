<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right" >

    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.93"
        android:background="@color/grey2"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.93" >

            <CheckBox
                android:id="@+id/checkBoxItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.96"
                android:gravity="left|center_vertical"
                android:onClick="onClickCheckedItem"
                android:text="CheckBox"
                android:textColor="@color/blue"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextCantidadItem"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"
                android:width="@dimen/activity_horizontal_margin" />

            <EditText
                android:id="@+id/editTextPrecioUdsItem"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textSize="10dp"
                android:width="@dimen/activity_horizontal_margin" />

            <EditText
                android:id="@+id/editTextPrecioTotalItem"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"
                android:width="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:gravity="right|center_vertical" >

                <ImageView
                    android:id="@+id/imageViewGeolocalizarProducto"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:onClick="onClickGeolocalizarProducto"
                    android:src="@android:drawable/ic_menu_view" />

                <ImageView
                    android:id="@+id/imageDetallarProducto"
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:onClick="onClickDetallarProducto"
                    android:src="@android:drawable/ic_menu_info_details" />

                <ImageView
                    android:id="@+id/imageViewDelete"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_delete" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>