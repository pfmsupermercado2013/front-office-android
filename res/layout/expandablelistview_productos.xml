<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right"
    android:paddingBottom="@dimen/supermarket_activity_vertical_margin"
    android:paddingLeft="@dimen/supermarket_activity_horizontal_margin"
    android:paddingRight="@dimen/supermarket_activity_horizontal_margin"
    android:paddingTop="@dimen/supermarket_activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.93"
        android:background="@color/grey2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/supermarket_activity_vertical_margin"
        android:paddingLeft="@dimen/supermarket_activity_horizontal_margin"
        android:paddingRight="@dimen/supermarket_activity_horizontal_margin"
        android:paddingTop="@dimen/supermarket_activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/layoutItemCatalogoProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.93"
            android:onClick="onClickSeleccionarProducto"
            android:paddingBottom="@dimen/supermarket_activity_vertical_margin"
            android:paddingLeft="@dimen/supermarket_activity_horizontal_margin"
            android:paddingRight="@dimen/supermarket_activity_horizontal_margin"
            android:paddingTop="@dimen/supermarket_activity_vertical_margin" >

            <TextView
                android:id="@+id/TextViewHijo01"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.26"
                android:gravity="left|center_vertical"
                android:textColor="@color/blue" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.93"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/imageViewGeolocalizarProducto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="onClickGeolocalizarProducto"
                    android:src="@android:drawable/ic_menu_view" />

                <ImageView
                    android:id="@+id/imageDetallarProducto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="onClickDetallarProducto"
                    android:src="@android:drawable/ic_menu_info_details" />

                <ImageView
                    android:id="@+id/imageAnyadirCarrito"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="onClickAnyadirCarrito"
                    android:src="@android:drawable/ic_input_add" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>